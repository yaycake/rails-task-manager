<h1>Tasks#index</h1>
<p>Find me in app/views/tasks/index.html.erb</p>
<ul>
  <% @tasks.each do |task| %>
    <li> <%= "#{task.description} #{task.complete}" %>
      <%= link_to "Click to complete", tasks_path(task), method: :completed=, data: { confirm: "Are you sure it's done?" } %>
    <%= link_to "Delete", tasks_path(task), method: :delete, data: { confirm: "Are you sure?" } %></li>
  <% end %>
</ul>
