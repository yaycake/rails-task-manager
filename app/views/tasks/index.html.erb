<h1>Tasks#index</h1>
<p>Find me in app/views/tasks/index.html.erb</p>
<%= link_to "Create", tasks_new_path %>
<ul>
  <% @tasks.each do |task| %>
    <li> <%= "#{task.description} #{task.complete}" %>
      <%= link_to "Edit", task_path(task) %>
    <%= link_to "Delete", task_path(task.id), method: :delete, data: { confirm: "Are you sure?" } %></li>
  <% end %>
</ul>
